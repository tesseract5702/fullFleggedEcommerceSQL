<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Log In</title>
    <style>
        *{
            box-sizing: border-box;
            margin: 0px;
            padding: 0px;
        }
        body{
            background-image: linear-gradient(to bottom right,rgb(15, 102, 216),rgb(4, 227, 235));
        }
        .container{
            height: 100%;
            width: 100%;
        }
        .loginBox{
            height: 450px;
            width: 350px;
            padding: 10px;
            padding-top: 40px;
            background-color: rgba(255, 255, 255, 0.692);
            border-radius: 5px;
            border-style: solid;
            border-color: black;
            border-width: 2px;
        }
        .userName
        {
            margin: 5px;
            margin-bottom: 10px;
        }
        .submitBtn
        {
            margin: 40px 5px 10px 5px;
        }
        .txtpara{
            text-align : center;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center">
        <div class="loginBox container">
            <form method="POST" action="/login">
                <div class="userName">
                    <div><h4>Email:</h4></div>
                    <input type="email" class="form-control" placeholder="abc123@gmail.com" name="mail" aria-label="username" aria-describedby="basic-addon1" required>
                </div>
                <div><h4>Password:</h4></div>
                <div class="password">
                    <input type="password" class="form-control" placeholder="Password" name="password" aria-label="password" aria-describedby="basic-addon1" required>
                </div>
                <div>
                    <p>
                        <a href="/forgetPass">Forget Password?</a>
                    </p>
                </div>
                <% if(errorlogin){%>
                    <div><%=errorlogin%></div>
                <%}%>
                <div class="submitBtn d-grid gap-2">
                    <input type="submit" class="btn btn-primary" value="Login">
                </div>
                <p class="txtpara">Don't have an account?</p>
            </form>
            <a href="/addUser">
                <div class="signUplink d-grid gap-2">
                    <button class="btn btn-primary">Signup</button>
                </div>
            </a>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
</html>